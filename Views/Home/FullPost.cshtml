<head>
@model IhorsSlaves.Models.Post

@{
    ViewBag.Title = Model.PostName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
</head>

<body>
    <div class="post">
        <div class="text">
     <h2>@Model.PostName</h2>
            </div>
            <div class="text">
     @Model.Text
                </div>
        <div id="data">
        @Model.PostDate
        @Html.ActionLink(Model.PostUser, "Manage", "Account")
            @if (ViewBag.PostUser)
            {
                @Html.ActionLink("Змінити", "EditPost", new { PostId = Model.PostId})
                @Html.ActionLink("Видалити", "DeletePost", new { PostId = Model.PostId})
            }
        </div>
    </div>
</body>
    